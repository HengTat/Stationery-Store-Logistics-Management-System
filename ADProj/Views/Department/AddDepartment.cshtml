
@{
    ViewData["Title"] = "AddDepartment";
    List<CollectionPoint> cplist = (List<CollectionPoint>)ViewData["cpList"];
    var msg = ViewData["alertMsg"];
}

@if (msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal("@msg");
        };
    </script>
}

<div align="center">
    <h1>New Department</h1>
    <form class="form-horizontal" id="AddDepartmentForm" action="SaveDepartment" method="post">
        <div class="form-group">
            <label class="col-sm-5 control-label">Dept Code: </label>
            <div class="col-sm-3">
                <input class="form-control" type="text" name="deptId">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label">Name: </label>
            <div class="col-sm-3">
                <input class="form-control" type="text" name="name">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label">Collection Point: </label>
            <div class="col-sm-3">
                <select class="form-control" type="text" name="cpId">
                    @foreach (CollectionPoint cp in cplist)
                    {
                        <option value="@cp.Id">@cp.Name</option>
                    }
                </select>
            </div>
        </div>
