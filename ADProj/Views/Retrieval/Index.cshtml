
@{
    ViewData["Title"] = "Retrieval List";
    var rtList=(List<Retrieval>)ViewData["rtList"];
}
    <form method="post" style="margin-bottom:40px" action="/Disbursement/Generate">
        <div class="container" align="center">
            <div align="center" style="margin-top:20px"><img src="https://img.icons8.com/ios-filled/50/000000/ingredients-list.png" /></div>
            <h2>Retrieval Records</h2>
            <table class="table table-bordered" style="width:500px; margin-top:20px">
                <thead style="background-color:lightgrey">
                    <tr>
                        <th>Date</th>
                        <th>ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rtd in rtList)
                    {
                        <tr>
                            <td>@rtd.DateRetrieved</td>
                            <td><a href="/Retrieval/RetrievalDetails?rId=@rtd.Id">RT @rtd.Id</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>

