
@{
    ViewData["Title"] = "UpdateSupplier";
    List<string> supplierList = ViewBag.supplierList;
    Supplier item = (Supplier)ViewData["item"];
}

<style>
    .btn {
        transition-duration: 0.4s;
        margin-left: 50px;
        border-radius: 8px;
        height: 40px;
    }
</style>


@Html.ActionLink("Back to Supplier List", "Index")
<div align="center">
    <h2>Edit Supplier</h2>

    <form class="form-horizontal" action="UpdateSupplier" method="POST" style="margin-top:40px; margin-bottom:50px;">

        <div class="form-group">
            <label class="col-sm-5 control-label">ID:</label>
            <div class="col-sm-3">
                <input class="form-control" type="text" value="@item.Id" name="Id" style="width:300px" readonly>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Name:</label>
            <div class="col-sm-3">
                <input class="form-control" type="text" value="@item.Name" name="Name" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Contact Name:</label>
            <div class="col-sm-3">
                <input class="form-control" name="ContactName" value="@item.ContactName" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Phone No:</label>
            <div class="col-sm-3">
                <input class="form-control" name="PhoneNo" value="@item.PhoneNo" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Fax No:</label>
            <div class="col-sm-3">
                <input class="form-control" name="FaxNo" value="@item.FaxNo" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Address:</label>
            <div class="col-sm-3">
                <input class="form-control" name="Address" value="@item.Address" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">GST Reg:</label>
            <div class="col-sm-3">
                <input class="form-control" name="GSTReg" value="@item.GSTReg" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Update</button>
        </div>

    </form>
</div>

