@{
    ViewData["Title"] = "SupplierStationeryList";

    var supplierstationeryList = (List<SupplierStationery>)ViewData["supplierstationeryList"];
    var supplierid = ViewData["supplierid"];
}
<style>
    #Delete {
        background-color: transparent;
        border: none;
        outline: none;
        cursor: pointer;
        overflow: hidden;
    }

    #Edit {
        background-color: transparent;
        border: none;
        outline: none;
        cursor: pointer;
        overflow: hidden;
    }
    #Add {
        border: 2px solid #008CBA;
        transition-duration: 0.4s;
        margin-left: 50px;
        border-radius: 8px;
        height: 40px;
    }

        #Add:hover {
            background-color: #008CBA; /* Blue */
            color: white;
        }
</style>

@Html.ActionLink("Back to Supplier List", "Index")
<h1 style="text-align:center">SUPPLIER STATIONERY DETAILS</h1>

<form method="post">
    <div class="container">
        <br />
        <table>
            <tr>
                <td><h3 style="margin-left:500px;">SUPPLIER ID:@supplierid </h3></td>
            </tr>
        </table>
<input name="Button1" id="Add" title="Submit" value="Add Stationery" formaction="AddStationery?id=@supplierid" style="border-style:Solid;" type="submit"></>
     <br />
    <br />
        <table class="table table-bordered">
            <thead style="background-color:lightgrey">
                <tr align="center">
                    <th>InventoryItemId</th>
                    <th>UOM</th>
                    <th>Tender Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in supplierstationeryList)
                {
                    <tr>
                        <td>@item.InventoryItemId</td>
                        <td>@item.UOM</td>
                        <td>@item.TenderPrice</td>

                    <td width="10%">
                            <button type="submit" id="Edit" formaction="EditDeleteStationery?cmd=edit&Id=@item.Id">Edit</button>
                            <br />
                            <button type="submit" id="Delete" formaction="EditDeleteStationery?cmd=delete&Id=@item.Id" style="color:red">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
