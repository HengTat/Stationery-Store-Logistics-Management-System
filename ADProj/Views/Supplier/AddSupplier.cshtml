
@model ADProj.Models.Supplier;
@{
    ViewData["Title"] = "AddSupplier";
    var msg = ViewData["alertMsg"];
}

@if (msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            if ("@msg" === "Supplier has been updated!")
            {
                swal("Success", "@msg", "success");

            }
            else { swal("@msg"); }
        };
    </script>
}



<div align="center">
    <h2>New Supplier</h2>
    <form class="form-horizontal" action="SaveSupplier" method="POST" style="margin-top:40px; margin-bottom:50px;">

        <div class="form-group">
            <label class="col-sm-5 control-label"> ID:</label>
            <div class="col-sm-3">
                <input class="form-control" type="text" name="Id" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Name:</label>
            <div class="col-sm-3">
                <input class="form-control" type="text" name="Name" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Contact Name:</label>
            <div class="col-sm-3">
                <input class="form-control" name="ContactName" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Phone No:</label>
            <div class="col-sm-3">
                <input class="form-control" name="PhoneNo" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Fax No:</label>
            <div class="col-sm-3">
                <input class="form-control" name="FaxNo" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Address:</label>
            <div class="col-sm-3">
                <input class="form-control" name="Address" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">GSTReg:</label>
            <div class="col-sm-3">
                <input class="form-control" name="GSTReg" type="text" style="width:300px">
            </div>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-danger" onclick="window.location.href = '/Supplier';">Cancel</button>
            <button type="submit" id="btnSave" class="btn btn-success">Save</button>
        </div>
    </form>
</div>