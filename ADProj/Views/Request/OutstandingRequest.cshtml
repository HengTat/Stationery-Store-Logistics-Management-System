@{
    ViewData["Title"] = "Outstanding Requests";
    var approved = (List<Request>)ViewData["ApprovedRequest"];
    var pendingStock = (List<Request>)ViewData["PendingStockRequest"];

}

<style type="text/css">
    table {
        width: 50%;
    }

        table tr th,
        table tr td {
            width: 31%;
            border: 1px solid black;
        }

    .center-block {
        display: block;
        margin-right: auto;
        margin-left: auto;
    }
</style>

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<h2>Orders to be fufilled</h2>

<table id="tblFufill" class="center-block">
    <thead>
        <tr>
            <th>Request Date</th>
            <th>Request Id</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var canFufill in approved)
        {
            <tr>
                <td>@canFufill.DateRequested</td>
                <td>@canFufill.Id</td>
                <td>view details</td>
            </tr>
        }
    </tbody>
</table>



<select id="selectOne" class="center-block">

    @foreach (var app in approved)
    {
        <option id="category-name" value=@app.Id>@app.EmployeeId</option>

    }
</select>
<br />

<h2>Orders that require restock</h2>

<select id="selectTwo" class="center-block">

    @foreach (var ps in pendingStock)
    {
        <option id="category-name" value=@ps.Id>@ps.EmployeeId</option>

    }
</select>

<table id="tblPendingStock" class="center-block">
    <thead>
        <tr>
            <th>Request Date</th>
            <th>Request Id</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cannotFufill in pendingStock)
        {
            <tr>
                <td>@cannotFufill.DateRequested</td>
                <td>@cannotFufill.Id</td>
                <td>view details</td>
            </tr>
        }
    </tbody>
</table>
