@{
    ViewData["Title"] = "Request Form";
    var categories = (List<ItemCategory>)ViewData["CategoryData"];
    var inventories = (List<InventoryItem>)ViewData["InventoryData"];
}

<style type="text/css">
    table {
        width: 50%;
    }

        table tr th,
        table tr td {
            width: 31%;
            border: 1px solid black;
        }

    .center-block {
        display: block;
        margin-right: auto;
        margin-left: auto;
    }
</style>


<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class=" col-sm-6" style="margin-bottom:40px">
    <div class="form-group">
        <label class="col-sm-6 control-label">Category:</label>
        <div class="col-sm-5">
            <select id="selectOne" class="form-control">
                <option style="display:none">Select Category</option>
                @foreach (var category in categories)
                {
                    <option id="category-name" value=@category.Id>@category.Name</option>

                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-6 control-label">Description:</label>
        <div class="col-sm-5">
            <select id="selectTwo" class="form-control">
                <option style="display:none">Select Item</option>
                @foreach (var item in inventories)
                {
                    <option data-uom=@item.UOM data-id=@item.Id value=@item.ItemCategoryId>@item.Description</option>

                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-6 control-label">Unit of Measurement:</label>
        <div class="col-sm-5">
            <input type="text" name="demo" id="demo" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-6 control-label">Request Quantity:</label>
        <div class="col-sm-5">
            <input type="text" name="requestQty" id="requestQty" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-6 control-label" style="display:none">add button:</label>
        <div class="col-sm-5">
            <button type="button" id="btn_Add" class="btn btn-danger">Add</button>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-6 control-label" style="display:none">ItemId:</label>
        <div class="col-sm-5">
            <input type="text" name="demo2" id="demo2" class="form-control" style="display:none" />
        </div>
    </div>
</div>

<div class=" col-sm-6" style="margin-bottom:40px">
    <div class="container">
        <table id="tblRequestsDetails" class="table table-bordered" style="width:500px; margin-top:20px">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Description</th>
                    <th style="display:none">ItemCode</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <div class="col-sm-6">

            <button type="button" value="Reset" id="btnReset" class="btn btn-danger">Reset</button>
            <button type="button" value="Submit" id="btnSubmit" class="btn btn-success">Submit</button>
        </div>
    </div>
</div>



<script src="~/js/request.js"></script>

