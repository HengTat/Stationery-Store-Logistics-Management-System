@{

    var categories = (List<ItemCategory>)ViewData["ItemCategory"];
    var inventories = (List<InventoryItem>)ViewData["InventoryItem"];
    var supplierstationary = (List<SupplierStationery>)ViewData["SupplierStationery"];
    var employee = (List<Employee>)ViewData["Employee"];
}

@{ ViewData["Title"] = "Adjustment Voucher Form";
    Layout = "_Layout";
    var msg = ViewData["Msg"];

}



<style type="text/css">
    table {
        width: 50%;
    }

        table tr th,
        table tr td {
            width: 31%;
            border: 1px solid black;
        }

    .center-block {
        display: block;
        margin-right: auto;
        margin-left: auto;
    }
</style>


<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>


<div id="errmsg">
    @if (msg != null)
    {

        <script type="text/javascript">
        window.onload = function () {
            alert("@msg");
        };
        </script>
    }
</div>

<div align="center">

    <form class="form-horizontal" method="POST" style="margin-top:40px">

        <div class="form-group">
            <label class="col-sm-5 control-label">Item Name:</label>
            <div class="col-sm-3">
        <select id="selectTwo" name="itemname" class="center-block">
            <option style="display:none">Select Item</option>
            @foreach (var item in supplierstationary)
            {
                <option name="itemname" data-uom=@item.UOM data-yy=@item.InventoryItem.QtyInStock data-price=@item.TenderPrice data-desription=@item.InventoryItem.Description data-id=@item.Id value="@item.InventoryItem.ItemCategory.Name">@item.InventoryItem.ItemCategory.Name</option>

            }
        </select>
            </div>
        </div>



        <br />

        <div class="form-group">
            <label class="col-sm-5 control-label">Unit of Measure:</label>
            <div class="col-sm-3">
                <input type="text" name="demo" id="demo" placeholder="Unit of Measurement" class="center-block" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Description:</label>
            <div class="col-sm-3">
                <input type="text" name="demo3" id="demo3" placeholder="Description" class="center-block" readonly />

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label">Price:</label>
            <div class="col-sm-3">
                <input type="text" name="demo4" id="demo4" placeholder="Price" class="center-block" readonly />

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label">Current Qty:</label>
            <div class="col-sm-3">
                <input type="text" name="demo5" id="demo5" placeholder="CurrentQty" class="center-block" readonly />
            </div>
        </div>


        @*<input type="text" name="demo" id="demo" placeholder="Unit of Measurement" class="center-block" readonly />
        <input type="text" id="demo2" placeholder="Item ID(CODE)" class="center-block" style="display:none" />
        <input type="text" name="demo3" id="demo3" placeholder="Description" class="center-block" readonly />
        <input type="text" name="demo4" id="demo4" placeholder="Price" class="center-block" readonly />
        <input type="text" name="demo5" id="demo5" placeholder="CurrentQty" class="center-block" readonly />*@





        @*<input type="text" placeholder="Qty" id="requestQty" name="requestQty" class="center-block" />*@

        <div class="form-group">
            <label class="col-sm-5 control-label">Adjust Qty:</label>
            <div class="col-sm-3">
                <input class="form-control" name="AdjustQty" type="number" style="width:100px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Adjust Amount($):</label>
            <div class="col-sm-3">
                <input class="form-control" name="AdjustAmt" id="AdjustAmt" type="text" style="width:100px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Reason:</label>
            <div class="col-sm-3">
                <input class="form-control" name="reason" id="reason" type="text" style="width:100px">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label">Employee Name:</label>
            <div class="col-sm-3">
                <select id="employee" name="employee">
                    <option></option>
                    @foreach (var emp in employee)
                    {
                        <option>@emp.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" name="submit" value="submit" id="submit" formaction="SaveAdjustmentVoucher" />
            <input type="submit" name="cancel" value="cancel" id="cancel" formaction="AddAdjustmentVoucher" />

        </div>

    </form>
</div>






<script src="~/js/adjust.js"></script>

