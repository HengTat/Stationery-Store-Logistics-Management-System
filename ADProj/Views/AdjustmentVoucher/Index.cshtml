@{
    ViewData["Title"] = "Adjustment Voucher List";
    var adjustmentvoucherlist = (List<AdjustmentVoucher>)ViewData["AdjustmentVoucherList"];
}



<div class="container">
    <h1 style="text-align:center">@ViewData["Title"]</h1>
    <form id="AdjustmentVoucherList" method="post" action="AdjustmentVoucher/AddAdjustmentVoucher" s>
        <input type="submit" value="+ New Adjustment Voucher" id="addNewAdjustmentVoucher" style="border-style:Solid;" class="btn btn-success" />

        <table class="table table-bordered" id="table" border="1" style="margin-top:20px; text-align:center">
            <thead style="background-color:lightgrey">
                <tr align="center">
                    <th style="width:80px; text-align:center">Date</th>
                    <th style="width:90px; text-align:center">Category</th>
                    <th style="width:80px; text-align:center">Item Id</th>
                    <th style="width:80px; text-align:center">UOM</th>
                    <th style="width:150px; text-align:center">Description</th>
                    <th style="width:80px; text-align:center">Price ($)</th>

                    <th style="width:100px; text-align:center">Adjustment Quantity</th>
                    <th style="width:100px; text-align:center">Adjustment Amount</th>
                    <th style="width:100px; text-align:center">Reason</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var adjustmentvoucher in adjustmentvoucherlist)
                {
                    <tr>
                        <td>@adjustmentvoucher.date</td>
                        <td>@adjustmentvoucher.InventoryItem.ItemCategory.Name</td>
                        <td>@adjustmentvoucher.InventoryItemId</td>
                        <td>@adjustmentvoucher.InventoryItem.UOM</td>
                        <td>@adjustmentvoucher.InventoryItem.Description</td>
                        <td>@adjustmentvoucher.SupplierStationery.TenderPrice</td>
                        <td>@adjustmentvoucher.AdjustQty</td>
                        <td>@adjustmentvoucher.AdjustAmt</td>

                        <td>@adjustmentvoucher.Reason</td>
                    </tr>

                }
            </tbody>
        </table>
    </form>
</div>
