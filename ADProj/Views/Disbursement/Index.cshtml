@{
    ViewData["Title"] = "Disbursement Records";
    var dates = (List<DateTime>)ViewData["dates"];
}
<style>
    #Date {
        background-color: transparent;
        border: none;
        outline: none;
        color: #33BAFF;
    }
</style>

<form method="post">
    <div class="container" align="center">
        <div align="center" style="margin-top:20px"><img src="https://img.icons8.com/ios-filled/50/000000/right3.png" /></div>
        <h2>Disbursement Records</h2>
        <table class="table table-bordered" style="width:400px; margin-top:20px; text-align:center">
            <thead style="background-color:lightgrey">
                <tr align="center">
                    <th style="width:100px; text-align:center">Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var date in dates)
                {
                    <tr>
                        <td>
                            <button type="submit" id="Date" formaction="Disbursement/ViewDisbursement?Date=@date.ToString("dd/MM/yyyy")">@date.ToString("dd/MMM/yyyy")</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
