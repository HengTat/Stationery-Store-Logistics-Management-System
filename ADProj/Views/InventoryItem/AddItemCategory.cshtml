
@{
    ViewData["Title"] = "AddItemCategory";
    var msg=ViewData["alertMsg"];
}
@if (msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@msg");
        };
    </script>
}

    <div align="center">
        <h2>New Item Category</h2>
        <form class="form-horizontal" action="SaveItemCategory" method="POST" style="margin-top:40px">
            <div class="form-group">
                <label class="col-sm-5 control-label">Category Name:</label>
                <div class="col-sm-3">
                    <input class="form-control" type="text" style="width:300px" name="categoryName">
                </div>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-danger">Cancel</button>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>

