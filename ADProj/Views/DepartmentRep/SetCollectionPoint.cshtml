
@{
    ViewData["Title"] = "Set Collection Point";
    List<CollectionPoint> collectionPoints = (List<CollectionPoint>)ViewData["cplist"];
    CollectionPoint currentCollectionPoint = (CollectionPoint)ViewData["currentCollectionPoint"];
}


<div align="center">
    <h1> Set Collection Point </h1>
    <form class="form-horizontal" id="SetCollectionPointForm" action="SetCollectionPoint" method="post">
        <div class="form-group">
            <table align="center">
                <tbody>
                    @foreach (CollectionPoint cp in collectionPoints)
                    {
                        @if (cp.Id == currentCollectionPoint.Id)
                        {
                            <tr>
                                <td><input type="radio" value="@cp.Id" name="collectionPointId" checked> @cp.Name : @cp.Time </td>
                                <br />
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td><input type="radio" value="@cp.Id" name="collectionPointId"> @cp.Name : @cp.Time </td>
                                <br />
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <a href="/" ><button type="button" class="btn btn-danger">Cancel</button></a>
            <button type="submit" id="btnSave" class="btn btn-success">Save</button>
        </div>
    </form>
</div>
