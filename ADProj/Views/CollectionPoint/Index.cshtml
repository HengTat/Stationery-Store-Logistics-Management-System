
@{
    ViewData["Title"] = "Collection Points";
    List<CollectionPoint> cplist = (List<CollectionPoint>)ViewData["cplist"];
    var msg = ViewData["alertMsg"];
}

@if (msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            if ("@msg" === "Collection point has been updated!")
            {
                swal("Success", "@msg", "success");

            }
            else if ("@msg" === "Collection point is successfully created!") {
                swal("Success", "@msg", "success");

            }
            else { swal("@msg"); }
        };
    </script>
}

<div class="container">
    <h1 style="text-align:center"> @ViewData["Title"] </h1>
    <a href="/CollectionPoint/AddCollectionPoint"><button type="button" class="btn btn-success">Add New Collection Point</button></a>
    <br />
    <form id="CollectionPointListForm" method="post">

        <table class="table table-bordered" align="center" style="margin-top:20px; text-align:center">
            <thead style="background-color:lightgrey">
                <tr>
                    <th style="text-align:center">Collection Point</th>
                    <th style="text-align:center">Collection Time</th>
                    <th style="text-align:center">Store Clerk</th>
                    <th style="text-align:center">Action</th>
                    <th style="text-align:center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CollectionPoint cp in cplist)
                {
                    <tr>
                        <td>@cp.Name</td>
                        <td>@cp.Time</td>
                        <td>@cp.Employee.Name</td>
                        <td><button type="submit" class="btn btn-warning btn-xs" formaction="/CollectionPoint/EditCollectionPoint?cpId=@cp.Id">Edit</button></td>
                        <td><button type="submit" class="btn btn-danger btn-xs" formaction="/CollectionPoint/DeleteCollectionPoint?cpId=@cp.Id">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>